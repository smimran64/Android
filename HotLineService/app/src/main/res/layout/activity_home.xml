<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F7FA">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotline Services"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_gravity="center"
        android:paddingBottom="12dp"/>

    <!-- Fire Service -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Service"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"/>

            <Button
                android:id="@+id/btnFireService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call 102"
                android:backgroundTint="#FF5252"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- National Emergency -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="National Emergency"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"/>

            <Button
                android:id="@+id/btnNationalEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call 999"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Anti Corruption -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anti Corruption Commission"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#388E3C"/>

            <Button
                android:id="@+id/btnAntiCorruption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call 106"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Health Service -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Health Consultation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0C0D0C"/>

            <Button
                android:id="@+id/btnEmergencyHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call 16263"
                android:backgroundTint="#0D0C0C"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Natural Disaster -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natural Disaster"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#EF08EF"/>

            <Button
                android:id="@+id/btnDisaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call 1090"
                android:backgroundTint="#A007A0"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Consumer Rights -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumer Rights Service"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#5103AF"/>

            <Button
                android:id="@+id/btnConsumer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call 16121"
                android:backgroundTint="#3A033A"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>